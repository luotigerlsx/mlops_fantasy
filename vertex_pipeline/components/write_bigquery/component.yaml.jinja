name: Write BigQuery
inputs:
- {name: project_id, type: String}
- {name: data_region, type: String}
- {name: output_dataset_uri, type: String}
- {name: input_dataset, type: Dataset}
outputs:
implementation:
  container:
    image: asia-southeast1-docker.pkg.dev/{{project_id}}/mlops-repo/write-bigquery:latest
    command: [python, /pipelines/component/src/main.py]
    args: [
      --executor_input, {executorInput: null},
      --function_to_execute, load_csv_to_bigquery,
      --project-id-output-path, {inputValue: project_id},
      --data-region-output-path, {inputValue: data_region},
      --output-dataset-uri-path, {inputValue: output_dataset_uri},
      --input-dataset-output-path, {inputPath: input_dataset}
    ]
