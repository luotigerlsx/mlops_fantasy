name: Train Model
inputs:
- {name: project_id, type: String}
- {name: data_region, type: String}
- {name: hptune_region, type: String}
- {name: data_pipeline_root, type: String}
- {name: training_container_image_uri, type: String}
- {name: serving_container_image_uri, type: String}
- {name: custom_job_service_account, type: String}
- {name: input_dataset, type: Dataset}
- {name: vpc_network, type: String, optional: true}
outputs:
- {name: output_model, type: Model}
- {name: basic_metrics, type: Metrics}
- {name: classification_metrics, type: ClassificationMetrics}
- {name: feature_importance_dataset, type: Dataset}
- {name: instance_schema, type: Artifact}
implementation:
  container:
    image: asia-southeast1-docker.pkg.dev/{{project_id}}/mlops-repo/train-model:latest
    command: [python, /pipelines/component/src/train.py]
    args: [
      --executor_input, {executorInput: null},
      --function_to_execute, train_model,
      --project-id-output-path, {inputValue: project_id},
      --data-region-output-path, {inputValue: data_region},
      --hptune_region-output-path, {inputValue: hptune_region},
      --data-pipeline-root-output-path, {inputValue: data_pipeline_root},
      --training-container-image-uri-output-path, {inputValue: training_container_image_uri},
      --serving-container-image-uri-output-path, {inputValue: serving_container_image_uri},
      --custom-job-service-account-output-path, {inputValue: custom_job_service_account},
      --input-dataset-output-path, {inputPath: input_dataset},
      --output-model-output-path, {outputPath: output_model},
      --basic-metrics-output-path, {outputPath: basic_metrics},
      --classification-metrics-output-path, {outputPath: classification_metrics},
      --feature-importance-dataset-output-path, {outputPath: feature_importance_dataset},
      --instance-schema-dataset-output-path, {outputPath: instance_schema},
      --vpc-network-output-path, {inputValue: vpc_network}
    ]
