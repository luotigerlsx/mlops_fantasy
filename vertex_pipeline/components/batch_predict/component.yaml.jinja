name: Batch Prediction
inputs:
- {name: project_id, type: String}
- {name: data_region, type: String}
- {name: data_pipeline_root, type: String}
- {name: pipeline_run_id, type: String}
- {name: custom_container_image_uri, type: String}
- {name: custom_job_service_account, type: String}
- {name: scoring_id_columns, type: String}
- {name: gcs_scoring_result_folder, type: String}
- {name: input_dataset, type: Dataset}
- {name: input_endpoint, type: Artifact}
- {name: vpc_network, type: String, optional: true}
outputs:
- {name: scoring_result, type: Dataset}
implementation:
  container:
    image: asia-southeast1-docker.pkg.dev/{{project_id}}/mlops-repo/batch-predict:latest
    command: [python, /pipelines/component/src/predict.py]
    args: [
      --executor_input, {executorInput: null},
      --function_to_execute, batch_predict,
      --project-id-output-path, {inputValue: project_id},
      --data-region-output-path, {inputValue: data_region},
      --data-pipeline-root-output-path, {inputValue: data_pipeline_root},
      --pipeline-run-id-output-path, {inputValue: pipeline_run_id},
      --custom-container-image-uri-output-path, {inputValue: custom_container_image_uri},
      --custom-job-service-account-output-path, {inputValue: custom_job_service_account},
      --scoring_id_columns-output-path, {inputValue: scoring_id_columns},
      --gcs-scoring-result-folder-output-path, {inputValue: gcs_scoring_result_folder},
      --input-dataset-output-path, {inputPath: input_dataset},
      --input-endpoint-output-path, {inputPath: input_endpoint},
      --scoring-result-output-path, {outputPath: scoring_result},
      --vpc-network-output-path, {inputValue: vpc_network}
    ]
